{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "component_groups": {
            "convert_to_no_shield": {
                "minecraft:transformation": {
                    "into": "smokey_bedrock:hovering_inferno<smokey_bedrock:no_shield>"
                }
            },
            "has_shield": {
                "minecraft:damage_sensor": {
                    "triggers": [
                        {
                            "cause": "fall",
                            "deals_damage": false
                        },
                        {
                            "on_damage": {
                                "event": "smokey_bedrock:shield_down",
                                "filters": {
                                    "test": "is_immobile"
                                }
                            }
                        }
                    ]
                },
                "minecraft:variant": {
                    "value": 1
                }
            },
            "melee_mode": {
                "minecraft:attack": {
                    "damage": 6
                },
                "minecraft:behavior.melee_attack": {
                    "priority": 3
                }
            },
            "mode_switcher": {
                "minecraft:target_nearby_sensor": {
                    "inside_range": 2,
                    "must_see": true,
                    "on_inside_range": {
                        "event": "switch_to_melee",
                        "target": "self"
                    },
                    "on_outside_range": {
                        "event": "switch_to_ranged",
                        "target": "self"
                    },
                    "outside_range": 3
                }
            },
            "no_shield": {
                "minecraft:damage_sensor": {
                    "triggers": [
                        {
                            "cause": "fall",
                            "deals_damage": false
                        }
                    ]
                },
                "minecraft:experience_reward": {
                    "on_death": "q.last_hit_by_player ? 10 : 0"
                },
                "minecraft:loot": {
                    "table": "loot_tables/entities/blaze.json"
                },
                "minecraft:variant": {
                    "value": 0
                }
            },
            "ranged_mode": {
                "minecraft:behavior.ranged_attack": {
                    "attack_interval_max": 5,
                    "attack_interval_min": 3,
                    "attack_radius": 16,
                    "burst_interval": 0.3,
                    "burst_shots": 3,
                    "charge_charged_trigger": 0,
                    "charge_shoot_trigger": 4,
                    "priority": 3
                },
                "minecraft:shooter": {
                    "def": "minecraft:small_fireball"
                }
            }
        },
        "components": {
            "minecraft:behavior.float": {
                "priority": 0
            },
            "minecraft:behavior.hurt_by_target": {
                "priority": 1
            },
            "minecraft:behavior.nearest_attackable_target": {
                "entity_types": [
                    {
                        "filters": {
                            "subject": "other",
                            "test": "is_family",
                            "value": "player"
                        },
                        "max_dist": 48
                    }
                ],
                "must_see": true,
                "priority": 2
            },
            "minecraft:behavior.random_look_around": {
                "priority": 5
            },
            "minecraft:behavior.random_stroll": {
                "priority": 4,
                "speed_multiplier": 1
            },
            "minecraft:can_climb": {},
            "minecraft:collision_box": {
                "height": 1.8,
                "width": 0.5
            },
            "minecraft:conditional_bandwidth_optimization": {},
            "minecraft:despawn": {
                "despawn_from_distance": {}
            },
            "minecraft:fire_immune": {},
            "minecraft:follow_range": {
                "max": 48,
                "value": 48
            },
            "minecraft:health": {
                "max": 40,
                "value": 40
            },
            "minecraft:hurt_on_condition": {
                "damage_conditions": [
                    {
                        "cause": "drowning",
                        "damage_per_tick": 1,
                        "filters": {
                            "operator": "==",
                            "test": "in_contact_with_water",
                            "value": true
                        }
                    }
                ]
            },
            "minecraft:is_hidden_when_invisible": {},
            "minecraft:jump.static": {},
            "minecraft:movement": {
                "value": 0.23
            },
            "minecraft:movement.basic": {},
            "minecraft:nameable": {},
            "minecraft:navigation.walk": {
                "avoid_damage_blocks": true,
                "avoid_water": true,
                "can_path_over_water": true
            },
            "minecraft:on_hurt": {
                "event": "minecraft:on_hurt_event",
                "target": "self"
            },
            "minecraft:on_hurt_by_player": {
                "event": "minecraft:on_hurt_event",
                "target": "self"
            },
            "minecraft:physics": {},
            "minecraft:pushable": {
                "is_pushable": true,
                "is_pushable_by_piston": true
            },
            "minecraft:type_family": {
                "family": [
                    "blaze",
                    "monster",
                    "mob"
                ]
            }
        },
        "description": {
            "identifier": "smokey_bedrock:hovering_inferno",
            "is_experimental": false,
            "is_spawnable": true,
            "is_summonable": true
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "mode_switcher",
                        "has_shield"
                    ]
                }
            },
            "minecraft:on_hurt_event": {
                "add": {
                    "component_groups": [
                        "mode_switcher"
                    ]
                }
            },
            "smokey_bedrock:no_shield": {
                "add": {
                    "component_groups": [
                        "mode_switcher",
                        "no_shield"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "has_shield"
                    ]
                }
            },
            "smokey_bedrock:shield_down": {
                "add": {
                    "component_groups": [
                        "convert_to_no_shield"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "has_shield"
                    ]
                }
            },
            "switch_to_melee": {
                "add": {
                    "component_groups": [
                        "melee_mode"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "ranged_mode"
                    ]
                }
            },
            "switch_to_ranged": {
                "add": {
                    "component_groups": [
                        "ranged_mode"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "melee_mode"
                    ]
                }
            }
        }
    }
}