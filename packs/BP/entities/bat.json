{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "component_groups": {
            "smokey_bedrock:bat_adult": {
                "minecraft:experience_reward": {
                    "on_death": "query.last_hit_by_player ? 5 + (query.equipment_count * Math.Random(1,3)) : 0"
                },
                "minecraft:movement": {
                    "value": 0.1
                }
            },
            "smokey_bedrock:bat_baby": {
                "minecraft:experience_reward": {
                    "on_death": "query.last_hit_by_player ? 10 + (query.equipment_count * Math.Random(1,3)) : 0"
                },
                "minecraft:is_baby": {},
                "minecraft:movement": {
                    "value": 0.15
                },
                "minecraft:scale": {
                    "value": 0.5
                }
            }
        },
        "components": {
            "minecraft:behavior.float": {
                "priority": 0
            },
            "minecraft:behavior.float_wander": {
                "float_duration": [
                    0.1,
                    0.35
                ],
                "random_reselect": true,
                "xz_dist": 10,
                "y_dist": 7,
                "y_offset": -2
            },
            "minecraft:breathable": {
                "suffocate_time": 0,
                "total_supply": 15
            },
            "minecraft:can_fly": {},
            "minecraft:collision_box": {
                "height": 0.9,
                "width": 0.5
            },
            "minecraft:conditional_bandwidth_optimization": {},
            "minecraft:damage_sensor": {
                "triggers": {
                    "cause": "fall",
                    "deals_damage": false
                }
            },
            "minecraft:despawn": {
                "despawn_from_distance": {}
            },
            "minecraft:game_event_movement_tracking": {
                "emit_flap": true
            },
            "minecraft:health": {
                "max": 6,
                "value": 6
            },
            "minecraft:hurt_on_condition": {
                "damage_conditions": [
                    {
                        "cause": "lava",
                        "damage_per_tick": 4,
                        "filters": {
                            "operator": "==",
                            "subject": "self",
                            "test": "in_lava",
                            "value": true
                        }
                    }
                ]
            },
            "minecraft:is_hidden_when_invisible": {},
            "minecraft:jump.static": {},
            "minecraft:movement.basic": {},
            "minecraft:nameable": {},
            "minecraft:navigation.float": {
                "can_path_over_water": true
            },
            "minecraft:physics": {},
            "minecraft:type_family": {
                "family": [
                    "bat",
                    "mob"
                ]
            }
        },
        "description": {
            "identifier": "minecraft:bat",
            "is_experimental": false,
            "is_spawnable": true,
            "is_summonable": true
        },
        "events": {
            "minecraft:entity_spawned": {
                "randomize": [
                    {
                        "add": {
                            "component_groups": [
                                "smokey_bedrock:bat_adult"
                            ]
                        },
                        "remove": {},
                        "weight": 95
                    },
                    {
                        "add": {
                            "component_groups": [
                                "smokey_bedrock:bat_baby"
                            ]
                        },
                        "remove": {},
                        "weight": 5
                    }
                ]
            }
        }
    }
}